# Configuration file for tracking multiple Google Docs
#
# Define documents with custom folder names for organization.
# To find a document ID, look at the document URL:
# https://docs.google.com/document/d/YOUR_DOC_ID_HERE/edit
#
# Copy this file to 'documents.yaml' and add your documents:
#   cp documents.yaml.example documents.yaml

documents:
  # Format: Specify document ID, optional name, and optional granularity

  # Full format with all options:
  # - id: 1Q-qMIRexwdCRd38hhCRHEBpXeru2oi54LwfQU7NvWi8
  #   name: cv-matt
  #   granularity: daily  # Options: all, hourly, daily, weekly, monthly
  #
  # - id: 2A-bNkPstuvwxCEf45ijKLMNOPabcd6efgh9hijklmno
  #   name: project-proposal
  #   granularity: weekly  # Get final revision per week

  # Granularity options:
  #   - all:     Download all revisions (default)
  #   - hourly:  Final revision per hour
  #   - daily:   Final revision per day
  #   - weekly:  Final revision per week
  #   - monthly: Final revision per month

  # Simple format (uses document ID, downloads all revisions):
  # - 1Q-qMIRexwdCRd38hhCRHEBpXeru2oi54LwfQU7NvWi8
